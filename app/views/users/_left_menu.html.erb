  <div class="alert alert-info">
    <h3>My Profile<span><%= link_to 'Edit Profile', edit_user_path(@user) if user_signed_in? && current_user == @user %></span></h3>
    <div class="col-md-4">
    
    <%= image_tag @user.avatar.url, class: 'img-rounded img-responsive', alt: 'Picture' %>
    <h5><%= @user.username %></h5>
    </div>
    <div class="col-md-8">
    <ul class="q_list">
      <li>No of question asked<span><%= @user.questions.count %></span></li>
      <li>No of question responded<span><%= @user.answers.count %></span></li>
    </ul>
    </div>
  </div>
  <div class="alert alert-info">
    <h3>Stats</h3>
    <ul class="stats">
      <li><i class="fa fa-question-circle"></i>Question<span>(<%= @user.questions.count %>)</span></li>
      <li><i class="fa fa-comment"></i>Answer<span>(<%= @user.answers.count %>)</span></li>
    </ul>
  </div>
