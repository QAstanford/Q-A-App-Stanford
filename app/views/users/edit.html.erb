  <div class="container">
    <section>
      <div class="row">
       <div class="col-md-4" id="about-admin">
          <div class="alert alert-info">
          <h3>My Profile<span><a href="">Edit Profile</a></span></h3>
          <div class="col-md-4">
          
          <%= image_tag @user.avatar.url, class: 'img-rounded img-responsive', alt: 'Picture' %>
          <h5><%= @user.username %></h5>
          </div>
          <div class="col-md-8">
          <ul class="q_list">
            <li>No of question asked<span>21</span></li>
            <li>No of question responded<span>29</span></li>
          </ul>
          </div>
        </div>
        <div class="alert alert-info">
          <h3>Stats</h3>
          <ul class="stats">
            <li><i class="fa fa-question-circle"></i>Question<span>(10)</span></li>
            <li><i class="fa fa-comment"></i>Answer<span>(30)</span></li>
          </ul>
        </div>
        <div class="alert alert-info">
          <h3>Tags</h3>
          <ul class="tags">
            <li><a href="">Project</a></li>
            <li><a href="">Portfolio</a></li>
            <li><a href="">UI</a></li>
            <li><a href="">HTML</a></li>
          </ul>
          <ul class="tags">
            <li><a href="">Project</a></li>
            <li><a href="">Portfolio</a></li>
            <li><a href="">UI</a></li>
            <li><a href="">HTML</a></li>
          </ul>
        </div>
        </div>
        <div class="col-md-8">
        <div class="col-md-12" id="about-admin">
          <div class="alert alert-info">
            <h2>Edit Profile</h2>
            <%= form_for @user, html: { class: 'edit' } do |f| %>
              <div class="col-md-6">
                <%= f.text_field :first_name, class: 'span3', placeholder: 'First Name' %>
                <!%= f.email_field :email, class: 'span3', placeholder: 'Email' %>
                <input type="text" class="span3" placeholder="Email" required>
                <%= f.password_field :password, class: 'span3', placeholder: 'Password', required: true %>
                <%= f.text_field :country, class: 'span3', placeholder: 'Country' %>
              </div>
              <div class="col-md-6">
                <%= f.text_field :last_name, class: 'span3', placeholder: 'Last Name' %>
                <%= f.text_field :website, class: 'span3', placeholder: 'Website' %>
                <%= f.password_field :password_confirmation, class: 'span3', placeholder: 'Confirm Password', required: true %>
                <input type="text" class="span3" placeholder="Preferred Freelance Website" required>
              </div>
              <div class="col-md-12">
                <div class="col-md-2">
                  <i class="fa fa-user"></i>
                </div>
                <div class="col-md-10">
                  <label>Profile Picture</label>
                  <%= f.file_field :avatar, required: true %>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <label>About Yourself</label>
                    <%= f.text_area :summary, class: 'input-xlarge span5', id: 'message', rows: '10', required: true %>
                    <%= f.submit 'Update', class: 'btn btn-primary pull-right' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- ROW END -->


    </section>
