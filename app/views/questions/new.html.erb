        <div class=" col-md-12">
          <label for="Poll" class="col-sm-3">Poll</label>

          <div class="col-sm-4">
            <%= f.check_box :is_poll, id: 'poll', placeholder: 'Poll' %> This question is a poll?
          </div>
        </div> -->

        <div class=" col-md-12">
          <label for="details" class="col-sm-3">Details <i class="fa fa-asterisk"></i></label>

          <div class="col-sm-8">
            <%= f.text_area :details, class: 'form-control col-sm-4 no-radius theme-form', id: 'details', placeholder: 'Input Description', style: 'height:100px', required: true %>
          </div>
        </div>

        <div class=" col-md-12">
          <button class="btn btn-default" id="submit">Publish Your Question</button>
