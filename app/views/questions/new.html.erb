          <label for="tags" class="col-sm-3">Tags <i class="fa fa-asterisk"></i></label>

          <div class="col-sm-8">
            <%= f.text_field :tag_list, value: '', class: 'form-control col-sm-4 no-radius theme-form', id: 'tags', 'data-role' => 'tagsinput', required: true %>
          </div>
        </div>
