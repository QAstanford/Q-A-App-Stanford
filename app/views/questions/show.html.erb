<%= content_for :styles do %>
  <!-- TAGSINPUT STYLE CSS -->
  <%= stylesheet_link_tag 'bootstrap-tagsinput.min' %>
<% end %>

<div class="col-md-12" id="about-admin">
  <div class="col-md-12 ">
    <div class="alert alert-info">
      <div class="media-body">
        <br>

        <!--Buttons for larger screen-->
        <div class="pull-left">
          <%= link_to user_path(@question.user), class: 'pull-left col-xs-3' do %>
            <h3 style="border:0px"><%= @question.user.username %></h3>
            <%= image_tag @question.user.avatar.url, class: 'img-rounded img-responsive img-circle', alt: 'profile' %>
          <% end %>
          <h2 style="border: 0; margin-left: 100px;"><b><%= @question.title %></b></h2>
        </div>
        <div class="pull-right">
          <a href="#" class="btn btn-social btn-facebook" onclick="scrollToElement('#answer_div', 600);">
            Answer
          </a>
        </div>
        <br><br>

        <p><%= simple_format @question.details %></p>
        <ul class="list question-list">
          <!-- <li class="text-success"><i class="fa fa-check"></i>Solved</li> -->
          <li><i class="fa fa-clock-o"></i><%= time_ago_in_words @question.created_at %> ago</li>
          <li><i class="fa fa-comment"></i><%= @question.answers.count %> Answer</li>
          <li class="list-view"><i class="fa fa-user fa-1X"></i><%= @question.views_count %> Views</li>
          <!-- <li class="text-warning"><i class="fa fa-star"></i>0</li>
          <li><i class="fa fa-folder"></i>Html</li>
          <span class="pull-right">
            <li><i class="fa fa-thumbs-o-up "></i><i class="fa fa-thumbs-o-down "></i></li>
            <li><%= @question.up_vote_count - @question.down_vote_count %></li>
          </span> -->
        </ul>

        <!--Buttons for smaller screen-->
        <div class="botton-box hidden-lg hidden-md hidden-sm">
          <a href="" class="q-btn-home"><i class="fa fa-question"></i>Question</a>
          <br><br>
          <a href="" class="r-btn-home">Report</a>
        </div>
        <br>
      </div>
    </div>
    <div class="alert alert-info">
      <h2>Answers(<%= @question.answers.count %>)</h2>

      <% @question.answers.each do |answer| %>
        <div>
          <%= link_to user_path(answer.user), class: 'pull-left col-md-2' do %>
              <br>
              <%= image_tag answer.user.avatar.url, class: 'img-rounded img-responsive img-circle', alt: 'profile' %>
          <% end %>
          <div class="media-body">
            <br><br>

            <h3 style="border:0px"><%= link_to answer.user.username, user_path(answer.user) %></h3>

            <div class="pull-left col-md-12">
              <!-- <span class="col-md-1">
                <i class="fa fa-chevron-up"></i>
                <i class="fa fa-chevron-down"></i>
              </span>
              <span class="col-md-1"><%= answer.up_vote_count - answer.down_vote_count %></span> -->
              <span class="col-md-7"><i class="fa fa-clock-o"></i> <%= answer.created_at.strftime("%B %d, %Y at %l:%M %p") %></span>
            </div>
            <br>

            <p><%= simple_format answer.details %></p>
            <br>
            <ul class="list question-list">
              <!-- <li class="text-success"><i class="fa fa-check"></i>Best Answer</li> -->
              <h2 class="col-md-10"></h2>
            </ul>
            <br>
          </div>
        </div>
      <% end %>

      <div class="col-md-12" id="answer_div">
        <div class="alert alert-info">
          <h2>Answer</h2>
          <%= form_for [@question, Answer.new], html: {class: 'ask'} do |f| %>
              <div class=" col-md-12">
                <label for="details" class="">Comment <i class="fa fa-asterisk"></i></label>

                <div class="col-sm-12">
                  <%= f.text_area :details, class: 'form-control col-sm-4 no-radius theme-form', id: 'details', placeholder: 'Input Description', style: 'height:100px', required: true %>
                </div>
              </div>

              <div class=" col-md-12">
                <button class="btn btn-default" id="submit">Post Your Answer</button>
              </div>

          <% end %>
        </div>
      </div>

    </div>

  </div>
</div>

<%= content_for :scripts do %>
  <!-- REQUIRED BOOTSTRAP TAGINPUT SCRIPTS -->
  <%= javascript_include_tag 'bootstrap-tagsinput.min' %>
  <!-- REQUIRED BOOTSTRAP FILEINPUT SCRIPTS -->
  <%= javascript_include_tag 'bootstrap-filestyle.min' %>
<% end %>
